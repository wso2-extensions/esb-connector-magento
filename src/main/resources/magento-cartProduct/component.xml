<component name="magento-cartProduct" type="synapse/template">
    <subComponents>
        <component name="addCartProduct">
            <file>addCartProduct.xml</file>
            <description>Add one or more products to a shopping cart.</description>
        </component>
        <component name="updateCartProduct">
            <file>updateCartProduct.xml</file>
            <description>Update one or more products in a shopping cart.</description>
        </component>
        <component name="removeCartProduct">
            <file>removeCartProduct.xml</file>
            <description>Remove one or more products from a shopping cart.</description>
        </component>
        <component name="listCartProducts">
            <file>listCartProducts.xml</file>
            <description>Get a list of products in a shopping cart.</description>
        </component>
        <component name="moveProductFromQuoteToCart">
            <file>moveProductFromQuoteToCart.xml</file>
            <description>Move one or more products from the quote to the customer shopping cart.</description>
        </component>
    </subComponents>
</component>